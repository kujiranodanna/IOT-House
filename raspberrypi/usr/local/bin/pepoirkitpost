#!/bin/bash
PATH=$PATH:/usr/local/bin
# pepoirkitpost,Post of IR data for IRKit
# licence GPLv2 ; this scripts designed by IZAMUKARERA 2014.10.17 update 2018.2.24
# pepoirkitpost ir_num timer
DIR=/www/remote-hand/tmp
IRKIT_IP=$DIR/.IRKit_IP
DOCFILE=$DIR/irkit_out_document
usage() {
  echo usage, $0 IRKit number:0-5 [timer:1-300000]
  exit
}
if [ $# -gt 2 -o $# -lt 1 ];then
  usage
elif [ "$1" -gt 5 ];then
  usage
elif [ $# -eq 2 ];then
 if [ $2 -gt 300000 ];then
   usage
  fi
  if [ $2 -lt 500 ];then
    usage
  fi
fi

IRNUM=$1
TIMER=$2
IRFILE=$DIR/.irdata_${IRNUM}
if [ -e ${IRKIT_IP} ];then
  IP=`cat ${IRKIT_IP}`
  if [ -e ${IRFILE} ];then
    if [ `cat ${IRFILE} |wc -c` = 0 ];then
	  echo IRKit data_$IRNUM not ready !
      exit
    fi
  else 
    echo IRKit data_$IRNUM not ready !
    exit
  fi
else
  echo IRKit Device not found!
  exit
fi
wget http://${IP}/messages --header="X-Requested-With: PepoLinux" --post-file=${IRFILE} --output-document=${DOCFILE} >/dev/null 2>&1
if [ ${TIMER}X != "X" ];then
  msleep ${TIMER}
  wget http://${IP}/messages --header="X-Requested-With: PepoLinux" --post-file=${IRFILE} --output-document=${DOCFILE} >/dev/null 2>&1
fi 
