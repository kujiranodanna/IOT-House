#!/bin/sh
# The MIT License
# Copyright (c) 2021-2027 Isamu.Yamauchi , 2021.6.21 update 2025.7.27
# pepohome-bridgectl, homebridge moniter daemon for Rasberry pi zero W2.
LOG1=/var/log/homebridge.log
LOG2=/var/log/homebridge.log.1
prog_pid=/root/.homebridge/pepohome-bridgectl_pid
TIMEWAIT=30000
# logrotate time,0155 -> 155
LOGROTATE=155
error(){
  while true;do
    P_PID=$(pgrep homebridge)
    if [ ! -z "$P_PID" ];then
      kill -KILL $P_PID
      msleep $TIMEWAIT
    fi
    P_PID=$(pgrep homebridge)
    if [ -z "$P_PID" ];then
      break
    fi
  done
  rm $prog_pid
  exit
}
logrote(){
  if [ ! -e $LOG1 -a ! -e $LOG2 ];then
    echo pepo_log1start >$LOG1
    msleep $TIMEWAIT
    echo pepo_log2start >$LOG2
  fi
  while true;do
    P_PID=$(pgrep homebridge)
    if [ ! -z "$P_PID" ];then
      kill -KILL $P_PID
      msleep $TIMEWAIT
    fi
    P_PID=$(pgrep homebridge)
    if [ -z "$P_PID" ];then
      break
    fi
  done
  TIMESTAMP1=0
  TIMESTAMP2=0
  if [ -e $LOG1 ];then
    TIMESTAMP1=$(date +%s -r $LOG1)
  fi
  if [ -e $LOG2 ];then
    TIMESTAMP2=$(date +%s -r $LOG2)
  fi
  if [ $TIMESTAMP1 -gt $TIMESTAMP2 ];then
    homebridge -I >$LOG2 &
  else
    homebridge -I >$LOG1 &
  fi
  msleep $TIMEWAIT
}
trap error TERM HUP INT QUIT
while [ -e $prog_pid ];do
  tPID=$(cat $prog_pid)
  ctPID=$(ps ax |grep $tPID |wc -l)
  if [ $ctPID -gt 1 ];then
    kill -KILL $tPID
    msleep $TIMEWAIT
  fi
  rm $prog_pid
  P_PID=$(pgrep homebridge)
  if [ ! -z "$P_PID" ];then
    kill -KILL $P_PID
    msleep $TIMEWAIT
  fi
done
echo pepo_logstart >$LOG1
echo pepo_logstart >$LOG2
echo -n $$ >$prog_pid
while true;do
  P_PID=$(pgrep homebridge)
  if [ -z "$P_PID" ];then
    logrote
  fi
  LOOP=5
  while [ $LOOP -gt 0 ];do
    ACTTIME=$(date +%H%M)
    ACTTIME=$(expr ${ACTTIME} + 0)
    if [ $ACTTIME -eq $LOGROTATE ];then
      logrote
      msleep 60000
      break
    fi
    LOOP=$(($LOOP - 1))
    msleep 9998
  done
  P_PID=$(pgrep homebridge)
  if [ -z "$P_PID" ];then
    logrote
  else
    TIMESTAMP1=0
    TIMESTAMP2=0
    if [ -e $LOG1 ];then
      TIMESTAMP1=$(date +%s -r $LOG1)
    fi
    if [ -e $LOG2 ];then
      TIMESTAMP2=$(date +%s -r $LOG2)
    fi
    if [ $TIMESTAMP1 -gt $TIMESTAMP2 ];then
      ERRCT=$(tail -n 100 $LOG1 |grep ERROR |wc -l)
    else
      ERRCT=$(tail -n 100 $LOG2 |grep ERROR |wc -l)      
    fi
    if [ $ERRCT -gt 0 ];then
      logrote
      continue
    fi
    LIVE=$(netstat -anp| grep 51826)
    if [ $LIVE -eq 0 ];then
      logrote
    fi
  fi
done
