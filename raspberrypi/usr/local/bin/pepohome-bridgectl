# pepohome-bridgectl start/stop svc daemon for rasberry pi zero W.

LOG=/var/log/homebridge.log
error(){
  pkill -HUP homebridge
  exit
}
trap error TERM HUP KILL INT QUIT

while true;do
  ISPROG=`pgrep homebridge| wc -l`
  if [ $ISPROG -gt 0 ];then
    pkill -HUP homebridge
    msleep 1000
  else
    homebridge -I >$LOG 2>&1
  fi
  while true;do
    msleep 1000
  done
done
