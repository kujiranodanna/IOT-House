#!/bin/bash
#This scripts stop get-SNMP-agent.
#licence GPLv2 ; this scripts designed by IZAMUKARERA 2000.9.2 last-update 2004.4.4
#peposnmpoff
ALLOW=$USER
#H=HOST L=LOGfile P=path R=cron_run CT=in/out_counter EX=EXCEL.CSV
#TMP=temp_file NU=null_dev B=awk_path
#このスクリプトは　snmpwalk　コマンドを使用し指定された間隔でSNMPエージェント
#よりデータ収集を停止します。
#停止方法は　peposnmpoff　

H=$1
CM=$2
TM=$3
B=/usr/local/bin
NU=/dev/null
P=$PWD
L=$P/NODE_STATUS
R=$P/.get_in_out
C=$P/.min.cron
CT=$P/.SNMP_LOG
EX=$P/EXCEL.CSV
SP=$P/.SPEED
NEW=$P/.NEW
OLD=$P/.OLD

ALLOW=`echo $ALLOW|cut -c 1-4`
if [ $ALLOW != pepo ]
then
echo "Please login pepo and try it again."
exit
fi
rm ST $R $C $CT $SP $NEW $OLD .speed.awk .in_out.awk .sum.awk 2>$NU
crontab -r
echo peposnmp stop. 
