#!/bin/bash
#This scripts is  mount WindowsXP & samba start.
# licence GPLv2 ; this scripts designed by IZAMUKARERA 2006.5.17 update 2011.2.11
sed -e "s/path = \/home\/samba/path = \/mnt\/hdd/" -e "s/writable = yes/writable = no/" /etc/samba/smb.conf.org >/etc/samba/smb.conf.old
mv /etc/samba/smb.conf.old /etc/samba/smb.conf
MOUNT=`mount |grep "/dev/sda1 on /mnt/hdd"|wc -l`
if [ "$MOUNT" = "0" ];then
  mount /dev/sda1 /mnt/hdd/ -o ro,uid=nobody,gid=nobody
  echo |smbpasswd -a nobody -s
  service smb start
fi
