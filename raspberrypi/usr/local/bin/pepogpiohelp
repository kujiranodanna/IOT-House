#!/bin/bash
# The MIT License
# Copyright (c) 2020-2027 Isamu.Yamauchi , 2018.1.7 update 2018.11.22
# pepogpiohelp for helper GPIO.
# pepogpiohelp $1:ch[0-3] [$2:0 or 1] [$3: timer->1 to 300000ms]
PATH=$PATH:/usr/local/bin:/usr/local/sbin
usage(){
  echo "usage $0 write->chno:0-3 [DO:0|1] [timer->1 to 300000ms]" >/dev/stderr
  exit -1
}
if [ $# -eq 0 ];then
  usage
elif [ $# -eq 1 ];then
  usage
elif [ "$1" -gt 3 -o "$1" -lt 0 ];then
  usage
elif [ $# -eq 2 ];then
  if [ "$2" -gt 1 ];then
   usage
  fi
elif [ $# -eq 3 ];then
  if [ "$2" -gt 0 -a "$2" -gt 1 -o "$3" -gt 300000 -o "$3" -lt 1 ];then
    usage
  fi
fi
CH=$1
DATA=$2
TIMER=$3
prog=pepogpiohelp
DIR=/www/remote-hand/tmp
DOWD=$DIR/.gpiodo_write_helper
tDOWD=$DIR/.gpiodo_write_helper_tmp
LOCK=/var/lock/${prog}
writefile(){
  local ch data
  ch=$1
  data=$2
  case $ch in
    0) DO="DO[0]" ;;
    1) DO="DO[1]" ;;
    2) DO="DO[2]" ;;
    3) DO="DO[3]" ;;
  esac
  while true;do
    lockfile -1 -r 1 ${LOCK} >/dev/null 2>&1
    if [ $? = 0 ];then
      if [ -e ${DOWD} ];then
      cat ${DOWD} | grep -F -v $DO >${tDOWD}
      echo -en "${DO}=${data}" >>${tDOWD}
      mv ${tDOWD} ${DOWD}
      else
        echo -en "${DO}=${data}" >>${tDOWD}
        mv ${tDOWD} ${DOWD}    
      fi
      chown www-data.www-data ${DOWD}
      rm ${LOCK}
      break
    fi
    msleep 1000
    [ -e ${LOCK} ] && rm ${LOCK}
  done
}

if [ ! -z "$TIMER" ];then
  writefile $CH $DATA 
  msleep $TIMER
  [ $DATA != "0" ] && TMP="0" || TMP="1"
  writefile $CH $TMP
else
  writefile $CH $DATA 
fi
