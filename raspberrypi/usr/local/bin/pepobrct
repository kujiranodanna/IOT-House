#!/bin/bash
# pepobrcnt
# licence GPLv2 ; this scripts designed by IZAMUKARERA 2003.2.18 ;control for bridge.
# 2003.8.12 usage change
action1=$1
action2=X$2
if [ $action2 = "Xstart" ] ; then
	echo -e " Stating Pepo bridge control \n\a"
brctl addbr br0
brctl addif br0 eth0
brctl addif br0 $action1
brctl sethello br0 15    #set hello time
brctl setageing br0 300  #set ageing time
brctl setgcint br0 300   #set garbage collection interval
ifconfig br0 up
brctl show
fi

if [ $action2 = "Xstop" ] ; then
	echo -e " Stop Pepo bridge control \n\a"
ifconfig br0 down
brctl delif br0 eth0
brctl delif br0 $action1
brctl delbr br0
fi

if [ $action2 != "Xstart" ] && [ $action2 != "Xstop" ] ; then 
echo "Usage: $0 {eth1|tapX start|stop}"
fi
