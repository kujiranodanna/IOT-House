# GPIO LED Dance for rasberry pi zero W.
# pepoled_dance
GPIOCMD="/usr/local/bin/pepogpioctl"
while true;do
  DO=`echo $RANDOM |cut -c 2-2`
  for i in 1 2 4;do
    case $i in
      1) tDO="$(($((0x$DO & 1)) / 1))" ;j=0 ;;
      2) tDO="$(($((0x$DO & 2)) / 2))" ;j=1 ;;
      4) tDO="$(($((0x$DO & 4)) / 3))" ;j=2 ;;
    esac
    do[$j]=$tDO
   $GPIOCMD $j ${do[$j]}
#    msleep $((`echo $RANDOM |cut -c 1-4` / 2))
    msleep $((`echo $RANDOM |cut -c 1-3` / 4))
  done
  msleep 1000
done
