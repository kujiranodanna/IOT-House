#!/bin/bash
# licence GPLv2 ; this scripts designed by IZAMUKARERA 2005.10.1
end(){
	echo done
	exit 0
}
C=1
echo -n "Input group:"
read G
if [ -z $G ] ; then echo group is empty ;  end  ; fi
echo -n "Input Nuber of del user:"
read M
if [ -z "$M" ] ; then echo count is empty; end ; fi
GR=`cat /etc/group|egrep $G|awk 'BEGIN {FS=":"};{print $1}'` 
if [ "$GR""X" = "$G""X" ]; then  echo $G group does not exist ;end 
echo starting $G group delete
else 
	while [ "$M" -ge "$C" ]
	do
		userdel -r $G$C
		echo deluser $G$C success!
		C=`expr $C + 1`
	done
fi
