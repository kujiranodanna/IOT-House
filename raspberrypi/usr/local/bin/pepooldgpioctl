# pepogpioctl for contorl gpio signal, input and output.
# pepogpioctl $1:ch[0-9:b] [$2:0-f] [$3: timer->1 to 300000ms]
PATH=$PATH:/usr/local/bin:/usr/local/sbin
usage(){
  echo "usage $0 read->chno:0-9|b | write->chno:0-3 [DO:0|1|0-f] [timer->1 to 300000ms]" >/dev/stderr
  exit
}
GPIOCMD=/usr/bin/gpio
GPIOCMDWB="/usr/bin/gpio wb"
if [ $# -eq 0 ];then
  usage
else
  CH=$1
fi
if [ "$CH" = "b" ];then
  $GPIOCMDWB $2
  echo -en $2
  exit
fi
if [ "$CH" -eq 9 ];then
  $GPIOCMD mode 0 output
  $GPIOCMD write 0 0
  $GPIOCMD mode 1 output
  $GPIOCMD write 1 0
  $GPIOCMD mode 2 output
  $GPIOCMD write 2 0
  $GPIOCMD mode 3 output
  $GPIOCMD write 3 0
  $GPIOCMD mode 4 input
  $GPIOCMD mode 4 up
  $GPIOCMD mode 5 input
  $GPIOCMD mode 5 up
  $GPIOCMD mode 6 input
  $GPIOCMD mode 6 up
  $GPIOCMD mode 7 input
  $GPIOCMD mode 7 up
  exit
elif [ "$CH" -eq 8 ];then
  RD=0;tRD=0
  for i in 0 1 2 3 4 5 6 7;do
    tRD=`$GPIOCMD read $i`
    case "$i" in
      0) RD=$tRD ;;
      1) RD=$(($RD+ $(($tRD * 2)))) ;;
      2) RD=$(($RD+ $(($tRD * 4)))) ;;
      3) RD=$(($RD+ $(($tRD * 8)))) ;;
      4) RD=$(($RD+ $(($tRD * 16)))) ;;
      5) RD=$(($RD+ $(($tRD * 32)))) ;;
      6) RD=$(($RD+ $(($tRD * 64)))) ;;
      7) RD=$(($RD+ $(($tRD * 128)))) ;;
    esac
  done
  printf "%02x" $RD
  exit
elif [ "$CH" -gt 3 ];then
  usage
elif [ $# -eq 1 ];then
  if [ $CH -gt 3 ];then
    usage
  fi
  RCH=$(($CH + 3))
  RD=`$GPIOCMD read $RCH`
  echo -en $RD
  exit
elif [ $# -eq 2 -a "$2" -gt 1 ];then
  usage
elif [ $# -eq 2 -a "$2" -lt 0 ];then
  usage
elif [ $# -eq 3 ];then
  if [ "$2" -lt 0 -o "$2" -gt 1 -o "$3" -gt 300000 -o "$3" -lt 1 ];then
    usage
  else
   DO=$2
   $GPIOCMD write $CH $DO
   msleep $3
   [ $DO = "1" ] && DO=0 || DO=1
  fi
else
  DO=$2  
fi
TMP=`$GPIOCMD write $CH $DO`
echo -en $DO

#gpio readall
# +-----+-----+---------+------+---+-Pi ZeroW-+---+------+---------+-----+-----+
# | BCM | wPi |   Name  | Mode | V | Physical | V | Mode | Name    | wPi | BCM |
# +-----+-----+---------+------+---+----++----+---+------+---------+-----+-----+
# |     |     |    3.3v |      |   |  1 || 2  |   |      | 5v      |     |     |
# |   2 |   8 |   SDA.1 | ALT0 | 1 |  3 || 4  |   |      | 5v      |     |     |
# |   3 |   9 |   SCL.1 | ALT0 | 1 |  5 || 6  |   |      | 0v      |     |     |
# |   4 |   7 | GPIO. 7 |   IN | 1 |  7 || 8  | 0 | IN   | TxD     | 15  | 14  |
# |     |     |      0v |      |   |  9 || 10 | 1 | IN   | RxD     | 16  | 15  |
# |  17 |   0 | GPIO. 0 |   IN | 0 | 11 || 12 | 0 | IN   | GPIO. 1 | 1   | 18  |
# |  27 |   2 | GPIO. 2 |   IN | 0 | 13 || 14 |   |      | 0v      |     |     |
# |  22 |   3 | GPIO. 3 |   IN | 0 | 15 || 16 | 0 | IN   | GPIO. 4 | 4   | 23  |
# |     |     |    3.3v |      |   | 17 || 18 | 0 | IN   | GPIO. 5 | 5   | 24  |
# |  10 |  12 |    MOSI | ALT0 | 0 | 19 || 20 |   |      | 0v      |     |     |
# |   9 |  13 |    MISO | ALT0 | 0 | 21 || 22 | 0 | IN   | GPIO. 6 | 6   | 25  |
# |  11 |  14 |    SCLK | ALT0 | 0 | 23 || 24 | 1 | OUT  | CE0     | 10  | 8   |
# |     |     |      0v |      |   | 25 || 26 | 1 | OUT  | CE1     | 11  | 7   |
# |   0 |  30 |   SDA.0 |  OUT | 0 | 27 || 28 | 1 | IN   | SCL.0   | 31  | 1   |
# |   5 |  21 | GPIO.21 |   IN | 1 | 29 || 30 |   |      | 0v      |     |     |
# |   6 |  22 | GPIO.22 |   IN | 1 | 31 || 32 | 0 | IN   | GPIO.26 | 26  | 12  |
# |  13 |  23 | GPIO.23 |   IN | 0 | 33 || 34 |   |      | 0v      |     |     |
# |  19 |  24 | GPIO.24 |   IN | 0 | 35 || 36 | 0 | IN   | GPIO.27 | 27  | 16  |
# |  26 |  25 | GPIO.25 |   IN | 0 | 37 || 38 | 0 | IN   | GPIO.28 | 28  | 20  |
# |     |     |      0v |      |   | 39 || 40 | 0 | IN   | GPIO.29 | 29  | 21  |
# +-----+-----+---------+------+---+----++----+---+------+---------+-----+-----+
# | BCM | wPi |   Name  | Mode | V | Physical | V | Mode | Name    | wPi | BCM |
